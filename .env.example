# ── VM Role (only value that differs between VMs) ──
ROLE=orchestrator   # "orchestrator" on VM1, "specialist" on VM2

# ── VM Private IPs ──
ORCHESTRATOR_HOST=10.0.0.1
SPECIALIST_HOST=10.0.0.2

# ── Model config ──
MANAGER_MODEL=ollama/gemma3:27b
MANAGER_BASE_URL=http://10.0.0.1:11434
SPECIALIST_MODEL=ollama/gemma3:12b
SPECIALIST_BASE_URL=http://10.0.0.2:11434

# ── App ──
OUTPUT_DIR=./output
CHARTS_DIR=./output/charts

# ── Dev ──
MOCK_MODE=false
